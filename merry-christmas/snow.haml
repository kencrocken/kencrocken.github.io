!!! 5
%html.no-js{:lang => "en"}

    %head

        %meta{:charset => "utf-8"}

        %title Merry Christmas
        %meta{:name => "description", :content => "Christmas Wishes"}
        -# %meta{:name => "keywords", :content => "christmas, snowflakes"}
        -# %meta{:name => "author", :content => "Ken Crocken"}

        -# Mobile
        -# ==========================================================================

        %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
        -# CSS
        -# ==========================================================================

        %link{:rel => "stylesheet", :href => "styles/styles.css"}

    %body

        -# ==========================================================================
        -# Content
        -# ==========================================================================
        - (1..3).each do |i|
            %div{ class: "snow-wrap-#{i}"}
                - case "#{i}"
                - when "1"
                    - (1..100).each do |i|
                        %div{ class: "star-#{i}"}
                - when "2"
                    - (1..250).each do |i|
                        %div{ class: "star-#{i}"}
                - when "3"
                    - (1..700).each do |i|
                        %div{ class: "star-#{i}"}
        .title
            %h1
                Merry Christmas
        .outline
            %h1
                Merry Christmas
