!!! 5
%html.no-js{:lang => "en"}

    %head

        -# CSS
        -# ==========================================================================

        %link{:rel => "stylesheet", :href => "styles/styles.css"}

    %body

        -# ==========================================================================
        -# Content
        -# ==========================================================================
        - (1..3).each do |i|
            %div{ class: "snow-wrap-#{i}"}
                - case "#{i}"
                - when "1"
                    - (1..65).each do |i|
                        %div{ class: "star-#{i}"}
                - when "2"
                    - (1..170).each do |i|
                        %div{ class: "star-#{i}"}
                - when "3"
                    - (1..400).each do |i|
                        %div{ class: "star-#{i}"}
        .title
            %h1
                Merry Christmas